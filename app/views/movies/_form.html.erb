<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @movie %>

      <%= form_with(model: @movie, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :name, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Movie title" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of the movie" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :category, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.collection_select(:category_ids, Category.all, :id, :name, 
            { prompt: "Select categories from the list below " }, { multiple: true, size: 3, class: "custom-select shadow rounded" } ) %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn btn-outline-light brn-lg"%>
        </div>
      <% end %>
    </div>
    <%= link_to "[Cancel and return to movies listing]", movies_path, class: "text-info" %>
  </div>
</div>